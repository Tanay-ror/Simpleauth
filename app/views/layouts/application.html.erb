<!DOCTYPE html>
<html>
<head>
  <title>SessionAuthApp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid justify-content-between align-items-center">
      <div class="navbar-brand">
        <div class="row align-items-center">
          <div class="col-auto">
            <%= link_to root_path do %>
              <%= image_tag('innovalabs.jpeg', class: 'img-fluid', alt: 'Logo') %>
            <% end %>
          </div>
          <div class="col">
            <h1 class="mb-0 text-center"> InnovaLabs</h1>
          </div>
        </div>
      </div>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item">
              <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-outline-danger my-3 my-sm-0' %>
            </li>
          <% else %>
            <% if current_page?(login_path) %>
              <li class="nav-item">
                <%= link_to 'Signup', new_user_path, class: 'btn btn-outline-success my-3 my-sm-0' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Login', login_path, class: 'btn btn-outline-primary my-3 my-sm-0 mr-2' %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
