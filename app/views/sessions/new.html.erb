<div class="container">
  <h1 class="mb-4">You can Login to your account from here</h1>

  <%= form_with(url: login_path, local: true, html: { class: "mt-4" }) do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "fw-bold" %>
      <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "fw-bold" %>
      <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter your password" %>
    </div>

    <%= f.submit 'Login', class: 'btn btn-primary btn-lg mt-3' %>
  <% end %>
</div>
